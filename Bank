from Downloads.Transactions import Bank

print('-----Welcome-----')
bk=Bank()
bal=0
while True:
    print('\nA.Display Balance\nB.Deposit\nC.Withdraw\nD.Exit')
    opt=input('Enter choice: ')
    
    if opt=='A':
        bk.display(bal)
    elif opt=='B':
        dep=eval(input('Enter deposit amount: '))
        bk.deposit(dep)
    elif opt=='C':
        wd=eval(input('Enter withdraw amount: '))
        bk.withdraw(wd)
    elif opt=='D':
        print('Thank You')
        break

